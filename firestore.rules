rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to identify admins (users with role == 'admin' in users collection)
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    // Users can read and write their own profile
    match /users/{userId} {
      // Allow access if the authenticated user's UID matches the document ID
      // or if the stored document 'uid' field matches the authenticated user.
      // This helps when demo/seed data uses different document IDs but stores
      // the correct uid in the document data.
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        (resource.data != null && resource.data.uid == request.auth.uid)
      );
    }
    
    // Users can only read and write their own clients
    match /clients/{document} {
      // Allow create if the creator is owner of the client, or admin
      allow create: if request.auth != null && (
        request.auth.uid == request.resource.data.userId || isAdmin()
      );
      // Allow read/update/delete for admins, the owner, or the client whose doc ID equals their auth UID
      // (This supports client-managed updates when the document ID is the client's auth UID)
      allow read, update, delete: if request.auth != null && (
        isAdmin() || resource.data.userId == request.auth.uid || document == request.auth.uid
      );
    }
    
    // Users can only read and write their own deliveries
    match /deliveries/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only read and write their own buffaloes
    match /buffaloes/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only read and write their own feeding records
    match /feedings/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only read and write their own bills
    match /bills/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only read and write their own production records
    match /productions/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Users can only read and write their own subscriptions
    match /subscriptions/{document} {
      // Create only if the creator is the owner of the subscription
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Read allowed for admins or the owner
      allow get, list: if request.auth != null && (
        isAdmin() ||
        resource.data.userId == request.auth.uid ||
        (resource.data.ownerId != null && resource.data.ownerId == request.auth.uid)
      );
      // Updates allowed for admins, or owners who don't change `userId`/`ownerId` fields
      allow update: if request.auth != null && (
        isAdmin() ||
        (
          (resource.data.userId == request.auth.uid || (resource.data.ownerId != null && resource.data.ownerId == request.auth.uid)) &&
          request.resource.data.userId == resource.data.userId &&
          (request.resource.data.ownerId == resource.data.ownerId || !("ownerId" in request.resource.data))
        )
      );
      // Delete allowed for admins or owners
      allow delete: if request.auth != null && (
        isAdmin() ||
        resource.data.userId == request.auth.uid ||
        (resource.data.ownerId != null && resource.data.ownerId == request.auth.uid)
      );
    }
  }
}
